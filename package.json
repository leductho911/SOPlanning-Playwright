  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@types/node": "^22.10.5"
  },
  "dependencies": {
    "@faker-js/faker": "^9.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "uuid": "^11.0.4",
    "winston": "^3.17.0"
  }
}
